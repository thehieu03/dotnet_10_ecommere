@{
    ViewData["Title"] = "Error";
    string errorId = ViewData["ErrorId"]?.ToString() ?? string.Empty;
}

<h1>Error</h1>

<div class="error">
    An error occurred during authentication.
    @if (!string.IsNullOrEmpty(errorId))
    {
        <br />
        <text>Error ID: @errorId</text>
    }
</div>
